{% extends "base.html.j2" %}
{% block body %}
    <div class="bg-gray-900">
        <div class="flex flex-col md:h-screen lg:py-0 justify-end">
            <div class="flex flex-row flex-grow bg-gray-800">
                
            </div>
            <div class="h-20 flex flex-row flex bg-gray-900 justify-between">
                <div class="fixed inset-x-0 bottom-0 bg-gray-900 text-white">
                    <div class="max-w-screen-xl mx-auto px-4">
                        <div class="flex items-center justify-between h-16">
                            <!-- Left section: Song Information -->
                            <div class="flex items-center">
                                <img class="w-12 h-12 mr-3" src="album_art_url">
                                <div>
                                    <h3 class="text-lg font-semibold">Song Title</h3>
                                    <p>Artist Name</p>
                                </div>
                            </div>
                            <!-- Middle section: Playback Controls -->
                            <div class="flex items-center">
                                <button class="mx-2">
                                    <img style="transform: scale(-1, 1)" src="{{ url_for('static', filename='skip.svg')}}" class="w-10 h-10 ">
                                </button>
                                <button class="mx-2">
                                    <img src="{{ url_for('static', filename='play.svg') }}" class="w-8 h-8">
                                </button>
                                <button class="mx-2">
                                    <img src="{{ url_for('static', filename='skip.svg')}}" class="w-10 h-10">
                                </button>
                            </div>
                            <!-- Right section: Volume & Other Controls -->
                            <div class="flex items-center">
                                <button class="mx-2">
                                    <img src="{{ url_for('static', filename='volume.svg') }}" class="w-6 h-6">
                                </button>
                                <div class="w-32">
                                    <input type="range" class="cursor-pointer">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {# 
                   bottom bar 
                #}
            </div>
        </div>
    </div>
{% endblock body %}