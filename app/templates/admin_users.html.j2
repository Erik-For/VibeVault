{% extends "base.html.j2" %}
{% block title %}
Admin - Users
{% endblock %}
{% block body %}
 <div class="container mx-auto mt-4 p-4 bg-white shadow-lg">
        <!-- Form Section -->
        <div class="mb-6">
            <a href="{{ url_for('admin') }}" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-700 mb-4">Back</a>
            <form action="{{ url_for('invite_user') }}" method="POST" class="flex justify-between items-center">
                <div class="flex flex-col w-full max-w-xs">
                    <br>
                    <label for="emailAddress" class="text-sm text-gray-700 mb-2">Invite new user</label>
                    <input type="email" id="emailAddress" name="email" placeholder="Enter email" class="px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-200" required>
                </div>
                <button type="submit" class="ml-4 px-4 py-2 bg-blue-500 hover:bg-blue-700 text-white font-semibold rounded transition duration-200">Invite</button>
            </form>
        </div>
        <hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">
        <!-- Table Section -->
        <table class="min-w-full leading-normal mt-8">
            <thead>
                <tr>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        ID
                    </th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Name
                    </th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Email
                    </th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Usertype
                    </th>
                </tr>
            </thead>
            <tbody>
                <!-- Replace with your data -->
                {% for user in users %}
                <tr>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        <p class="text-gray-900 whitespace-no-wrap">{{ user.id }}</p>
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        <p class="text-gray-900 whitespace-no-wrap">{{ user.username }}</p>
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        <p class="text-gray-900 whitespace-no-wrap">{{ user.email }}</p>
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        <p class="text-gray-900 whitespace-no-wrap">{{ user.usertype }}</p>
                    </td>
                </tr>
                {% endfor %}
                <!-- Add more rows as needed -->
            </tbody>
        </table>
    </div>
{% endblock body %}