
<div class="pb-3">
{% for artist in artists %}
    <div onclick="setArtist(event,{{ artist.id }})" class="mb-1 flex items-center hover:bg-gray-700 bg-gray-900 p-5 rounded cursor-pointer">
        <div class="flex items-center">
            <img class="w-12 h-12 mr-3" src="{{ url_for('profile_picture', id=artist.id) }}">
            <div class="flex-grow">
                <h4 class="text-white text-lg">{{ artist.name }}</h4>
            </div>
        </div>
    </div>
{% endfor %}
</div>

{% for content_row in content %}
    <div onclick="setSong({{ content_row.id }});" class="mb-2 flex items-center bg-gray-900 hover:bg-gray-700 p-2 rounded cursor-pointer">        
        <div class="flex items-center">
            <img class="rounded w-12 h-12 mr-3" src="{{ url_for('contet_cover', id=content_row.id) }}" alt="Song Cover">
            <div class="flex-grow">
                <h4 class="text-white text-lg">{{ content_row.title }}</h4>
                <button onclick="setArtist(event, {{ content_row.artist.id }})" class="hover:underline text-gray-400">{{ content_row.artist.name }}</button>
            </div>
        </div>
    </div>
{% endfor %}
<h2 class="text-xl font-bold mb-4">{{ message }}</h2>
